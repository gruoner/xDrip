<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/food_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keypad_background"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/timebutton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_av_timer_white_36dp" />

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="23:59" />

        <TextView
            android:id="@+id/carbs_textviewfixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="Carbs:" />

        <TextView
            android:id="@+id/carbs_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="50g" />

        <TextView
            android:id="@+id/energy_textviewfixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="Energy:" />

        <TextView
            android:id="@+id/energy_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="5000kJ" />

        <TextView
            android:id="@+id/submit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/tick_thing"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/keypad_top_text_size"
            android:text="" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/food_selected_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <LinearLayout
            android:id="@+id/all_food_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cat_button1"
            style="@style/KeypadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="@string/NameFoodCategory_one"
            android:textSize="15sp" />
        <Button
            android:id="@+id/cat_button2"
            style="@style/KeypadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="@string/NameFoodCategory_two"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/cat_button3"
            style="@style/KeypadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="@string/NameFoodCategory_three"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/cat_button4"
            style="@style/KeypadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="@string/NameFoodCategory_four"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>