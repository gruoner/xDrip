<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:fillViewport="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context=".food.FoodProfileEditor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="380dp">
            <LinearLayout
                android:id="@+id/foodprofileeditor_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:orientation="vertical"/>
        </ScrollView>
        <LinearLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/foodcat_button1"
                style="@style/KeypadButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".25"
                android:text="@string/NameFoodCategory_one"
                android:textSize="12sp"
                android:onClick="foodCat1Button"/>
            <Button
                android:id="@+id/foodcat_button2"
                style="@style/KeypadButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".25"
                android:text="@string/NameFoodCategory_two"
                android:textSize="12sp"
                android:onClick="foodCat2Button"/>
            <Button
                android:id="@+id/foodcat_button3"
                style="@style/KeypadButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".25"
                android:text="@string/NameFoodCategory_three"
                android:textSize="12sp"
                android:onClick="foodCat3Button"/>
            <Button
                android:id="@+id/foodcat_button4"
                style="@style/KeypadButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".25"
                android:text="@string/NameFoodCategory_four"
                android:textSize="12sp"
                android:onClick="foodCat4Button"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/foodProfileCancelbtn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/foodProfileUndoBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:onClick="foodProfileCancelButton"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/foodProfileSaveBtn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/foodProfileUndoBtn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:onClick="foodProfileSaveButton"
                android:text="@string/save" />

            <Button
                android:id="@+id/foodProfileUndoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/foodProfileCancelbtn"
                android:onClick="foodProfileUndoButton"
                android:text="@string/reset" />
        </RelativeLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>